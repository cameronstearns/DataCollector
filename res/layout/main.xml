<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   >
   <EditText android:id="@+id/user_id"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/user_id"
      android:inputType="text|textNoSuggestions"
      />
   <Button android:id="@+id/end_col"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/end_col"
      />
   <Button android:id="@+id/start_col"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/start_col"
      />
   <TextView android:id="@+id/x_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
   <TextView android:id="@+id/y_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
   <TextView android:id="@+id/z_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
   <Button android:id="@+id/send"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_send"
      />
   <TextView android:id="@+id/summary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
</LinearLayout>

